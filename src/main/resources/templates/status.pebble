{% extends "layout/default" %}

{% block title %}
    status history
{% endblock %}

{% block content %}
    {% import "include/status_history/pagination" %}
    {% import "include/status_history/result_style" %}

    {% include "include/status_history/monitoring_info" %}

    <table class="table table-condensed table-hover">
        <tr>
            <th>Date</th>
            <th>Status</th>
        </tr>
        {% for result in test_results %}
            <tr>
                <td>
                    {{ result.createdAtFormatted }}
                </td>
                <td>
                    {{ result_style(result.result) }}
                </td>
            </tr>
        {% endfor %}
    </table>

    <p class="text-center">
        {{ pagination("status", monitoring, prev_page, next_page) }}
    </p>

    <p class="text-center">
        <a href="/status-history/{{ monitoring.id }}" class="btn btn-default">
            <i class="glyphicon glyphicon-time"></i> Status change history
        </a>
    </p>
{% endblock %}
